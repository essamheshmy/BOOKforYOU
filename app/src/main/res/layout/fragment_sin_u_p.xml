<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.SinUPFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:paddingHorizontal="8dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingVertical="20dp">

            <TextView
                android:id="@+id/BOOK"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/book"
                android:textColor="@color/purple_500"
                android:textSize="80dp"
                android:textStyle="bold"

                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/f0r"
                    android:textColor="@color/black"
                    android:textSize="50dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/you"
                    android:textColor="@color/purple_500"
                    android:textSize="80dp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/email"
            style="@style/my_inpot_etxtfild_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            app:startIconDrawable="@drawable/email_24"
            app:helperTextEnabled="true"
            app:counterMaxLength="20"
            android:hint="Enter your email"

            >
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="20dp"
                />

        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/password"
            style="@style/my_inpot_etxtfild_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:endIconMode="password_toggle"
            app:startIconDrawable="@drawable/password_24"
            app:helperTextEnabled="true"
            app:counterMaxLength="20"
            android:hint="Enter your password"
            app:helperText="Password must contain at least 8 characters"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="20dp"
                />

        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/password2"
            style="@style/my_inpot_etxtfild_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:endIconMode="password_toggle"
            app:startIconDrawable="@drawable/password_24"
            app:helperTextEnabled="true"
            app:counterMaxLength="20"
            android:hint="Enter your password"
            app:helperText="Password must contain at least 8 characters"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="20dp"
                />

        </com.google.android.material.textfield.TextInputLayout>
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.google.android.material.textfield.TextInputLayout
            android:paddingEnd="10dp"
            android:id="@+id/cantri"
            style="@style/my_inpot_etxtfild_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:helperTextEnabled="true"
            app:counterMaxLength="20"
            android:hint="country"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="20dp"
                />

        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/mail"
            style="@style/my_inpot_etxtfild_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            app:helperTextEnabled="true"
            app:counterMaxLength="20"
            android:hint="Your gender"

            >
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="20dp"
                />

        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>
        <Button
            android:id="@+id/btn_sinup"
            style="@style/my_btn_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SinUP" />
        <Button
            android:id="@+id/btn_sinin"
            style="@style/my_btn_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SinIN" />
    </LinearLayout>
    </ScrollView>
</FrameLayout>